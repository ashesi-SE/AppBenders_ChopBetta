<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
    android:title="URL data"
    android:key="pref_key_URL_settings">
    <EditTextPreference
        android:key="serverIP"
        android:title="@string/pref_title_serverAddress"
        android:summary="@string/pref_serverAddress"
        android:defaultValue="@string/pref_serverAddress"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!--todo:the below should be removed after app testing-->
    <EditTextPreference
        android:key="serviceURL"
        android:title="@string/pref_title_url"
        android:defaultValue="@string/pref_urlSet"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceCategory>
</PreferenceScreen>
